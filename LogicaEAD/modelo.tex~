\section*{Dedução Natural}

\subsection*{Questão 1.} Prove os seguintes sequentes usando dedução natural:

\begin{enumerate}[(a)]
	\item $\vdash (p\land q)\to p$.
\end{enumerate}

{\color{blue}
	\begin{proof}{60pt}{80pt}
		\assumption{2}{
			\state{$p \land q$}{HIPÓTESE}
			\state{$p$}{$\land_{e1}$ 1}
		}
		\state{$(p \land q) \to p$}{$\to_i$ 1-2}
	\end{proof}
}

\begin{enumerate}[(b)]
	\item $p\to (q\lor r), q\to s, r\to s \vdash p\to s.$
\end{enumerate}
{\color{blue}
	\begin{proof}{60pt}{80pt}
		\state{$p\to (q\lor r)$}{PREMISSA}
		\state{$q\to s$}{PREMISSA}
		\state{$r\to s$}{PREMISSA}
		\assumption{7}{
			\state{$p$}{HIPÓTESE}
			\state{$q \lor r$}{$\to_e$ 4,1}
			\assumption{2}{
				\state{$q$}{HIPÓTESE}
				\state{$s$}{$\to_e$ 6,2}
			}
			\assumption{2}{
				\state{$r$}{HIPÓTESE}
				\state{$s$}{$\to_e$ 8,3}
			}
			\state{$s$}{$\lor_e$ 5, 6-7,8-9}
		}
		\state{$p \to s $}{$\to_i$ 4-10}
	\end{proof}
}

